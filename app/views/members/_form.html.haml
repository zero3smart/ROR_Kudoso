.authform
  = simple_form_for([@family,@member]) do |f|
    - if @member.errors.any?
      #error_explanation
        %h2
          = pluralize(@member.errors.count, "error")
          prohibited this household from being saved:
        %ul
          - @member.errors.full_messages.each do |message|
            %li= message

    .field
      = f.input :first_name
    .field
      = f.input :last_name
    .field
      = f.input :username
    .field
      = f.input :birth_date
    .field
      = f.input :password
    .field
      = f.input :password_confirmation
    - if current_user.member.parent?
      .field
        = f.input :parent
    .field
      = f.button :submit,  :class => 'button right'