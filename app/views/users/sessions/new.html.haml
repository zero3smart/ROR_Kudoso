.uk-container-center.uk-text-center.uk-width-5-10
  %h2 Log in
  .uk-margin-top
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'uk-form uk-form-stacked'}, wrapper: :form_stacked )  do |f|
      = f.input :email, required: false, autofocus: true, placeholder: 'Email Address', label: false
      = f.input :password, required: false, placeholder: 'Password', label: false
      = f.input :remember_me, as: :boolean, label: false, inline_label: 'Remember me' if devise_mapping.rememberable?
      .uk-form-controls
        = f.button :submit, "Log in"
.uk-container-center.uk-text-center.uk-width-5-10
  = render "users/shared/links"