= simple_form_for [:admin, @api_device] do |f|
  - if @api_device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@api_device.errors.count, "error")} prohibited this api_device from being saved:"
      %ul
        - @api_device.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
  .field
    = f.input :expires_at
  .actions
    = f.submit 'Save'