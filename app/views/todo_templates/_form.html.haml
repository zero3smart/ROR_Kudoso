= form_for @todo_template do |f|
  - if @todo_template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo_template.errors.count, "error")} prohibited this todo_template from being saved:"
      %ul
        - @todo_template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :schedule
    = f.select_recurring :rule, nil, :allow_blank => true
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
