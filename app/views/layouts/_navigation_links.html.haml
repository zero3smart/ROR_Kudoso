- if user_signed_in?
  - if current_user.member.present? && current_user.member.parent?
    %li= link_to('My Family', family_path(current_user.family))
  %li= link_to('ToDo Templates', todo_templates_path)
  - if current_user.admin?
    %li= link_to('All Families', families_path)
  %li= link_to("Logout (#{current_user.email})", destroy_user_session_path, :method => :delete)
- else
  %li= link_to('Sign In', new_user_session_path)
  %li= link_to('Sign Up', new_user_registration_path)
