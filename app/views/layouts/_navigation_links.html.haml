- if controller_name == 'home'
  -if action_name == 'index'
    -#  Hidden li included to remove active class from about link when scrolled up past about section
    %li.hidden
      %a.page-scroll{href: '#page-top'} body
    %li
      %a.page-scroll{href: '#home'} home
    %li
      %a.page-scroll{href: '#features'} features
    %li
      %a.page-scroll{href: '#how'} how it works
    %li
      %a.page-scroll{href: '#pricing'} pricing
    %li
      %a.page-scroll{href: '#about'} about us
    %li
      %a{href: '/pre_signup'} sign up
  - else
    %li
      %a.page-scroll{href: '/'} home
    %li
      %a.page-scroll{href: '/#features'} features
    %li
      %a.page-scroll{href: '/#how'} how it works
    %li
      %a.page-scroll{href: '/#pricing'} pricing
    %li
      %a.page-scroll{href: '/#about'} about us
    %li
      %a{href: '/pre_signup'} sign up
- if member_signed_in? || user_signed_in?

  - if user_signed_in?
    - if current_user.admin?
      %li.dropdown
        %a#dropdownAdminMenu.dropdown-toggle{ href: '#', 'data-toggle' => "dropdown", 'aria-expanded' => "true"}
          Admin
          %span.caret
        %ul.dropdown-menu{role: 'menu', 'aria-labelledby' => "dropdownAdminMenu"}
          %li= link_to('Tickets', admin_tickets_path)
          %li= link_to('All Contacts', admin_contacts_path)
          %li= link_to('All Families', admin_families_path)
          %li= link_to('ToDo Templates', admin_todo_templates_path)
          %li= link_to('ToDo Groups', admin_todo_groups_path)
          %li= link_to('Device Types', admin_device_types_path)
          %li= link_to('Activity Templates', admin_activity_templates_path)

    %li= link_to('My Family', family_path(current_user.family)) if current_user.member.try(:parent?)

    %li= link_to("Logout (#{current_user.try(:member).try(:first_name) || 'user'})", destroy_user_session_path, :method => :delete)
  - else
    %li= link_to 'My Dashboard', [current_member.family, current_member]  if current_member
    %li= link_to("Logout (#{current_member.first_name})", destroy_member_session_path(id: current_member.family_id), :method => :delete)

