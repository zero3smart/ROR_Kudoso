    = stylesheet_link_tag 'reset', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'ss-glyphish-outlined', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'ss-social-circle', media: 'all', 'data-turbolinks-track' => true
